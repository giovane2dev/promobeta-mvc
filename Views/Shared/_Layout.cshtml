<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-md fixed-top bg-purple">
        <div class="container">
            <a href="#" class="navbar-brand">Promobeta</a>
            <button data-toggle="collapse" data-target="#navcol-1" class="navbar-toggler">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav">
                    <li role="presentation" class="nav-item">
                        <a href="/Company" class="nav-link mt-1">Dashboard</a>
                    </li>
                    <li role="presentation" class="nav-item">
                        <a href="/Company/Details" class="nav-link mt-1">Empresa</a>
                    </li>
                    <li role="presentation" class="nav-item">
                        <a href="/CompanyUnits" class="nav-link mt-1">Unidades</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-6 body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Promobeta</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/promobeta")
    @RenderSection("scripts", required: false)
</body>
</html>
